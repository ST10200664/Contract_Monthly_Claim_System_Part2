@model IEnumerable<Contract_Monthly_Claim_System_Part2.Models.Lecturer>

<h2>Lecturers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.Name</td>
                <td>@lecturer.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@lecturer.LecturerId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@lecturer.LecturerId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@lecturer.LecturerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New</a>
