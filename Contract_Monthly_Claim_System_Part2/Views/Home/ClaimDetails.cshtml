@model Contract_Monthly_Claim_System_Part2.Models.Claim

@{
    ViewData["Title"] = "Claim Details";
}

<h2>Claim Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Claim ID: @Model.Id</h5>
        <p><strong>Lecturer Name:</strong> @Model.Lecturer.Name</p>
        <p><strong>Claim Amount:</strong> @Model.Amount</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Date Submitted:</strong> @Model.SubmissionDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Description:</strong> @Model.Description</p>
    </div>
</div>

<a class="btn btn-secondary" href="@Url.Action("ViewClaims")">Back to Claims</a>
